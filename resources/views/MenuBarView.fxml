<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>


<MenuBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:id="menuBar"
         fx:controller="anrix.controller.MenuBarViewController">

    <Menu fx:id="fileMenu" text="File">
        <MenuItem text="New" onAction="#fileMenuItemClicked"/>
        <SeparatorMenuItem onAction="#fileMenuItemClicked"/>
        <MenuItem text="Open" onAction="#fileMenuItemClicked"/>
        <MenuItem text="Save" onAction="#fileMenuItemClicked"/>
        <MenuItem text="Save as..." onAction="#fileMenuItemClicked"/>
        <SeparatorMenuItem/>
        <MenuItem text="Exit" onAction="#fileMenuItemClicked"/>
    </Menu>

    <Menu fx:id="optionsMenu" text="Options">
        <MenuItem text="In develop"/>
    </Menu>

</MenuBar>